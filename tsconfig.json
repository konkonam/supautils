{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "declaration": true,
        "isolatedDeclarations": true,
        "emitDeclarationOnly": true,
        "declarationMap": false,
        "skipLibCheck": true,
        "stripInternal": true,
        "paths": {
            "@/*": [
                "./src/*",
            ],
            "@/types": [
                "./types/index.d.ts",
            ],
            "@/outputs/*": [
                "./src/outputs/*",
            ],
        }
    },
    "include": ["src", "types"],
    "exclude": [
        "node_modules",
        "playground",
        "dist",
    ]
}
